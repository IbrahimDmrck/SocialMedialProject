@model List<Topics>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h5 class="card-title d-inline">
                Gündemdeki Başlıklar
            </h5>
            <button class="btn btn-outline-primary float-end" style="font-size:1.25rem;"><i class="bi bi-plus-square-dotted fw-bold"></i> Ekle</button>
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover" id="table1">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Konu Başlığı</th>
                        <th class="text-center">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bol">@item.Id</td>
                            <td>@item.TopicTitle</td>
                            <td class="d-flex justify-content-center">
                                <a class="btn btn-outline-success" href="#">
                                    <i class="bi bi-eye-fill"></i>
                                </a>
                                <a class="btn btn-outline-warning mx-2" href="#">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <button class="btn btn-outline-danger delete-button" data-id="@item.Id">
                                    <i class="bi bi-trash"></i>
                                </button>

                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/admin/assets/extensions/jquery/jquery.min.js"></script>
    <script src="~/admin/assets/extensions/toastify-js/src/toastify.js"></script>

    <script>
        $(document).ready(function () {

            function Toast(message) {
                Toastify({
                    text: message,
                    duration: 3000,
                    close: true,
                    gravity: "top",
                    position: "center",
                    backgroundColor: "#4fbe87",
                }).showToast();
            }

            $(".delete-button").on("click", function (e) {
                e.preventDefault();
                var id = $(this).data("id");

                $.ajax({
                    type: "DELETE",
                    url: "https://localhost:7110/Admin/Topic/Delete/" + id,
                    success: function (response) {
                        Toast(response.message);

                        setTimeout(function () {
                            window.location.href = response.url;
                        }, 3000);
                    },
                    error: function (xhr, status, error) {
                        console.error("Ajax Error:", error);
                    },
                });

            });

        });
    </script>

}
