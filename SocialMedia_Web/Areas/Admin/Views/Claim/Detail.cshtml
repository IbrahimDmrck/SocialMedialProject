@model List<ClaimDto>
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}
@section css{
    <link rel="stylesheet" href="~/admin/assets/extensions/choices.js/public/assets/styles/choices.css">

}
<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h5 class="card-title d-inline">
                Yetkiler
            </h5>
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover" id="table1">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Kullanıcı Adı</th>
                        <th>Yetki Adı</th>
                        <th class="text-center">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bol">@{count += 1;} @count </td>
                            <td>@item.UserName</td>
                            <td>@item.ClaimName</td>
                            <td class="d-flex justify-content-center">
                                <button class="btn btn-outline-warning mx-2 update-btn" data-id="@item.ClaimId" data-bs-toggle="modal" data-bs-target="#inlineForm">
                                    <i class="bi bi-pencil-square"></i>
                                </button>
                                <a class="btn btn-outline-danger" href="#">
                                    <i class="bi bi-trash"></i>
                                </a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@await Component.InvokeAsync("_GetClaimComponent")

@section scripts{
    <script src="~/admin/assets/extensions/choices.js/public/assets/scripts/choices.js"></script>
    <script src="~/admin/assets/static/js/pages/form-element-select.js"></script>

    <script>
        $(document).ready(function () {
            $(".update-btn").on("click", function () {
                var ClaimId = $(this).data("id");
                console.log(ClaimId);
            });
        })
    </script>
}

