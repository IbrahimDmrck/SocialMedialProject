
@{
    ViewData["Title"] = "_HomeLayout";
}


<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/frontend/assets/css/style.css">
    <link rel="stylesheet" href="~/frontend/assets/css/responsive.css">
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <header id="headMenu" class=" d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom mt-2">
            <div class="col-md-3 mb-2 mb-md-0">
                <a class="d-inline-flex align-items-center link-body-emphasis text-decoration-none" href="">
                    <img src="~/frontend/assets/images/testLogo.jpg" class="img-fluid rounded-circle me-2" width="50" height="50" alt="">Sosyal Medya Projesi
                </a>
            </div>
            <ul class="nav menu col-12 col-md-auto mb-2 align-items-center justify-content-center mb-md-0">
                <li class="nav-link border border-1 border-primary px-2 me-3">
                    <a href="/" class="text-decoration-none">
                        <i class="bi bi-house-fill me-2"></i>Ana Sayfa
                    </a>
                </li>
                <li class="nav-link px-2 text-black me-3">
                    <a href="/profilim" class="text-decoration-none">
                        <i class="bi bi-person-circle me-2"></i>Profilim
                    </a>
                </li>
                <li class="nav-link px-2 text-black me-3">
                    <a href="/hesap-bilgilerim" class="text-decoration-none">
                        <i class="bi bi-sliders2-vertical me-2"></i>Ayarlar
                    </a>
                </li>
            </ul>

            <div class="col-md-3 text-end">
                @*  <a type="button" href="login.html" class="btn btn-outline-primary me-2">Giriş Yap</a>
                <a type="button" href="register.html" class="btn btn-primary">Kayıt Ol</a> *@
                <a class="btn btn-outline-danger px-2"><i class="bi bi-box-arrow-in-right me-2"></i>Çıkış Yap</a>
            </div>
        </header>
        <main class="d-flex justify-content-center justify-content-md-between">
            <div id="leftSideMenu" class="sticky-top col-2 justify-content-start h-50 py-1 px-1 text-center">
                <div class="border border-1 mb-4 mt-3 shadow h-auto">
                    <a class="d-inline-flex align-items-center link-body-emphasis text-decoration-none" href="">
                        <img src="~/frontend/assets/images/testLogo.jpg" class="img-fluid img-thumbnail rounded-circle me-2" width="50" height="50" alt="">
                    </a>
                    <h6>İbrahim Demircik</h6>
                    <div class=" align-items-center justify-content-center justify-content-md-between mb-5">
                        <a href="" class="col-6 border py-1 px-1 mb-5  float-start text-decoration-none"><i class="bi bi-substack me-2"></i>15</a>
                        <a href="" class="col-6 border py-1 px-1 mb-5 float-end text-decoration-none"><i class="bi bi-bell-fill me-2"></i>53</a>
                    </div>
                </div>
                <ul class="nav menu d-inline col-12 col-md-auto mb-2 align-items-center justify-content-center mb-md-0">
                    <li class="nav-link border border-1 border-primary ">
                        <a href="/" class="text-decoration-none">
                            <i class="bi bi-house-fill me-2"></i>Ana Sayfa
                        </a>
                    </li>
                    <li class="nav-link text-black my-2">
                        <a href="/profilim" class="text-decoration-none">
                            <i class="bi bi-person-circle me-2"></i>Profilim
                        </a>
                    </li>
                    <li class="nav-link text-black ">
                        <a href="/hesap-bilgilerim" class="text-decoration-none">
                            <i class="bi bi-sliders2-vertical me-2"></i>Ayarlar
                        </a>
                    </li>

                    <a class="btn btn-outline-danger mt-2"><i class="bi bi-box-arrow-in-right me-2"></i>Çıkış Yap</a>

                </ul>
            </div>
            @RenderBody()
        </main>
    </div>

    <!-- First Toast -->
    <div class="toast-container position-top  end-0 top-0 p-3">
        <!-- Second Toast -->
        <div id="viewToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header bg bg-success">
                <strong class="me-auto text-white">@TempData["Baslik"]</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body text-bg-success">
                @TempData["Message"]
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
    <script src="~/frontend/assets/js/responsive.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>

    @if (TempData["Success"] != null && TempData["Success"] is bool success && success)
    {
        <script>
            $(document).ready(function () {
                $('.toast').toast({
                    animation: true,
                    delay: 3000
                });
                $('.toast').toast('show');
            });
        </script>
    }
    <script>
        $('#summernote').summernote({
            placeholder: 'İnsanlarla birşeyler paylaşın',
            tabsize: 2,
            height: 120,
            toolbar: [
                ['style', ['style']],
                ['font', ['bold', 'underline', 'clear']],
                ['color', ['color']],
                ['para', ['ul', 'ol', 'paragraph']],
                ['table', ['table']],
                ['insert', ['link', 'picture', 'video']],
                ['view', ['fullscreen', 'codeview', 'help']]
            ]
        });
    </script>
    <script>
        $(document).ready(function () {
            $('.js-example-basic-single').select2({
                placeholder: "Gündemde Olan Bir Konu Seç"
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>