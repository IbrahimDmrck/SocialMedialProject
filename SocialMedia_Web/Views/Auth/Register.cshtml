@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Social Media Project | Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/frontend/assets/css/login.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.10.1/dist/sweetalert2.min.css">
    <style>
        .error {
            padding-left: 10px !important;
            background: white;
            color: red;
            vertical-align: middle;
            text-align: center;
        }
    </style>
</head>
<body>
    <video autoplay muted loop>
        <source src="~/frontend/assets/video/bg-video.mp4" type="video/mp4">
        Tarayıcınız video elementini desteklemiyor.
    </video>
    <div class="container-sm">
        <div id="login" class="row mx-auto position-absolute top-50 start-50 translate-middle">
            <div class="col-6 r-img">
                <img src="~/frontend/assets/images/5364354.jpg" class="img-fluid py-2" style="border-radius: 20px;" alt="Join Us" title="Join Us" width="">
            </div>
            <div class="col-6">
                <form action="#" method="post" class="px-5 pt-5 pb-4" id="RegisterForm">
                    <h1 class="text-center text-white fw-lighter">Aramıza Katıl</h1>
                    <div class="input-group">
                        <span class="input-group-text">Adınız :</span>
                        <input type="text" id="FirstName" name="FirstName" aria-label="First name" class="form-control">
                    </div>
                    <div class="input-group mt-3 mb-3">
                        <span class="input-group-text">Soyadınız :</span>
                        <input type="text" id="LastName" name="LastName" aria-label="Last name" class="form-control">
                    </div>

                    <div class="input-group mt-3 mb-3">
                        <span for="exampleInputEmail1" class="input-group-text">E-posta Adresiniz :</span>
                        <input type="email" class="form-control" id="Email" name="Email" id="exampleInputEmail1" aria-describedby="emailHelp">
                    </div>

                    <div class="input-group mt-3 mb-3">
                        <label class="input-group-text" for="Gender">Cinsiyet</label>
                        <select class="form-select" name="Gender" id="Gender">
                            <option value="" disabled> Cinsiyetinizi seçin </option>
                            <option value="E"> Erkek </option>
                            <option value="K"> Kadın </option>
                            <option value="B"> Berlitmek İstemiyorum </option>
                        </select>
                    </div>

                    <div class="input-group mt-3 mb-3">
                        <span for="PhoneNumber" class="input-group-text">Cep telefonu </span>
                        <input type="tel" id="tel" class="form-control" id="PhoneNumber" name="PhoneNumber">
                    </div>

                    <div class="input-group mt-3 mb-3">
                        <span for="Password" class="input-group-text">Şifreniz :</span>
                        <input type="password" class="form-control" id="Password" name="Password">
                    </div>

                    <div class="input-group mt-3 mb-3">
                        <span for="PasswordAgain" class="input-group-text">Şifre Tekrar</span>
                        <input type="password" class="form-control" id="PasswordAgain" name="PasswordAgain">
                    </div>
                    <div class="text-center">
                        <button class="btn btn-primary">Kayıt Ol</button>
                    </div>
                </form>
            </div>

        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.10.1/dist/sweetalert2.all.min.js"></script>

    <script>
        $(document).ready(function () {
            $("#RegisterForm").validate({
                rules: {
                    FirstName: {
                        required: true,
                        minlength: 2
                    },
                    LastName: {
                        required: true,
                        minlength: 2
                    },
                    Email: {
                        required: true,
                        email: true
                    },
                    Gender: {
                        required: true
                    },
                    PhoneNumber: {
                        required: true,
                        maxlength: 11,
                        minlength: 11,
                        digits: true
                    },
                    Password: {
                        required: true,
                        minlength: 8
                    },
                    PasswordAgain: {
                        required: true,
                        minlength: 8,
                        equalTo: "#Password"
                    }
                },
                messages: {
                    FirstName: {
                        required: 'Lütfen adınızı giriniz',
                        minlength: 'Adınız en az 2 karakter olmalı'
                    },
                    LastName: {
                        required: 'Lütfen soyadınızı giriniz',
                        minlength: 'Soyadınız en az 2 karakter olmalı'
                    },
                    Email: 'Lütfen eposta adresinizi giriniz',
                    Gender: 'Lütfen cinsiyetinizi belirtiniz',
                    PhoneNumber: {
                        required: 'Lütfen Telefon Numaranızı Giriniz',
                        digits: 'Telefon Numarası Rakamlardan oluşmalıdır !',
                        minlength: 'Telefon Numarası 11 karakter olmalıdır',
                        maxlength: 'Telefon Numarası 11 karakter olmalıdır'
                    }, 
                    Password: {
                        required: 'Şifre Boş Bıraklılamaz !!!',
                        minlength: 'Şifre en az 8 karakter olmalı'
                    },
                    PasswordAgain: {
                        required: 'Girilen Şifreler Aynı Değil',
                        equalTo: 'Girilen Şifreler Aynı Değil',
                        minlength: 'Şifre en az 8 karakter olmalı'
                    }
                },
                submitHandler: function (form) {
                    $.ajax({
                        type: "POST",
                        url: "/Auth/Register",
                        data: $(form).serialize(),
                        success: function (response) {
                            console.log(response)
                            if (response.success == true) {
                                Swal.fire({
                                    position: 'center',
                                    icon: 'success',
                                    text: response.message,
                                    showConfirmButton: false,
                                    timer: 4000
                                }).then(() => {
                                    window.location.href = response.url
                                });
                            } else {
                                Swal.fire({
                                    position: 'center',
                                    icon: 'error',
                                    text: response.message,
                                    showConfirmButton: false,
                                    timer: 4000
                                });
                            }
                            
                        },
                        error: function (error) {
                            console.log(error);
                        }
                    });
                }
            });
        });
    </script>
</body>
</html>

