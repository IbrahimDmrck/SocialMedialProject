@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Social Media Project | Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/frontend/assets/css/login.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.10.8/dist/sweetalert2.min.css">
    <style>
        .error {
            padding-left: 10px !important;
            background: white;
            color: red;
            vertical-align: middle;
            text-align: center;
        }
    </style>
</head>
<body>
    <video autoplay muted loop>
        <source src="~/frontend/assets/video/bg-video.mp4" type="video/mp4">
        Tarayıcınız video elementini desteklemiyor.
    </video>
    <div class="container-sm">
        <div id="login" class="row mx-auto position-absolute top-50 start-50 translate-middle">
            <div class="col-6 r-img">
                <img src="~/frontend/assets/images/5364354.jpg" class="img-fluid py-2" style="border-radius: 20px;" alt="Join Us" title="Join Us" width="">
            </div>
            <div class="col-6">
                <form id="RegisterForm" class="px-5 pt-5 pb-4" autocomplete="off">
                    <h1 class="text-center text-white fw-lighter">Aramıza Katıl</h1>
                    <div class="input-group">
                        <span class="input-group-text">Adınız :</span>
                        <input type="text" name="FirstName" id="FirstName" aria-label="First name" class="form-control">
                    </div>
                    <div class="input-group mt-3 mb-3">
                        <span class="input-group-text">Soyadınız :</span>
                        <input type="text" name="LastName" id="LastName" aria-label="Last name" class="form-control">
                    </div>

                    <div class="input-group mt-3 mb-3">
                        <span for="Email" class="input-group-text">E-posta Adresiniz :</span>
                        <input type="email" class="form-control" name="Email" id="Email" aria-describedby="emailHelp">
                    </div>

                    <div class="input-group mt-3 mb-3">
                        <label class="input-group-text" for="Gender">Cinsiyet</label>
                        <select class="form-select" name="Gender" id="Gender">
                            <option disabled>Cinsiyetiniz...</option>
                            <option value="E">Erkek</option>
                            <option value="K">Kadın</option>
                            <option value="B">Berlitmek İstemiyorum</option>

                        </select>
                    </div>

                    <div class="input-group mt-3 mb-3">
                        <span for="PhoneNumber" class="input-group-text">Cep telefonu </span>
                        <input type="tel" id="tel" class="form-control" name="PhoneNumber" id="PhoneNumber">
                    </div>

                    <div class="input-group mt-3 mb-3">
                        <span for="Password" class="input-group-text">Şifreniz :</span>
                        <input type="password" class="form-control" name="Password" id="Password">
                    </div>


                    <div class="input-group mt-3 mb-3">
                        <span for="PasswordAgain" class="input-group-text">Şifre Tekrar</span>
                        <input type="password" class="form-control" name="PasswordAgain" id="PasswordAgain">
                    </div>
                    <div class="text-center">
                        <button class="btn btn-primary">Kayıt Ol</button>
                        <a href="/giris-yap" class="btn btn-sm btn-primary float-end">Giriş Yap</a>
                    </div>
                </form>
            </div>

        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/additional-methods.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.10.8/dist/sweetalert2.all.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#RegisterForm").validate({
                rules: {
                    FirstName: {
                        required: true,
                        minlength: 2
                    },
                    LastName: {
                        required: true,
                        minlength: 2
                    },
                    Email: {
                        required: true,
                        email: true
                    },
                    Gender: {
                        required: true,
                    },
                    PhoneNumber: {
                        required: true,
                        minlength: 11,
                        maxlength: 11,
                        digits: true
                    },
                    Password: {
                        required: true,
                        minlength: 8
                    },
                    PasswordAgain: {
                        required: true,
                        minlength: 8,
                        equalTo: "#Password"
                    }
                },
                messages: {
                    FirstName: {
                        required: "Lütfen adınızı giriniz",
                        minlength: "Adınız en az 2 karakter olabilir"
                    },
                    LastName: {
                        required: "Lütfen soyadınızı giriniz",
                        minlength: "Soyadınız en az 2 karakter olabilir"
                    },
                    Email: {
                        required: "Lütfen e-postanızı giriniz",
                        email: "Lütfen geçerli bir e-posta adresi giriniz"
                    },
                    Gender: {
                        required: "Lütfen cinsiyetinizi seçiniz",
                    },
                    PhoneNumber: {
                        required: "Lütfen telefon numaranızı giriniz",
                        minlength: "Telefon numarası 11 haneli olmalıdır",
                        maxlength: "Telefon numarası 11 haneli olmalıdır",
                        digits: "Telefon numarası rakamlardan oluşmalarıdır"
                    },
                    Password: {
                        required: "Lütfen şifrenizi giriniz",
                        minlength: "Şifre en az 8 karakter olmalıdır"
                    },
                    PasswordAgain: {
                        required: "Girilen şifreler aynı değil",
                        minlength: "Şifre en az 8 karakter olmalıdır",
                        equalTo: "Girilen şifreler aynı değil"
                    }
                },
                submitHandler: function (form) {
                    $.ajax({
                        type: "POST",
                        url: "/Auth/Register",
                        data: $(form).serialize(),
                        success: function (response) {
                            if (response.success == true) {
                                Swal.fire({
                                    position: "center",
                                    text: response.message,
                                    icon: "success",
                                    showConfirmButton: false,
                                    timer: 4000
                                }).then(() => {
                                    window.location.href = response.url;
                                });
                            } else {
                                Swal.fire({
                                    position: "center",
                                    text: response.message,
                                    icon: "error",
                                    showConfirmButton: false,
                                    timer: 4000
                                })
                            }
                        }, error: function (xhr, status, error) {
                            console.log(error);
                        }
                    })
                }
            })
        })
    </script>
</body>
</html>

