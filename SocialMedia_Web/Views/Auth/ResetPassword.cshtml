@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Social Media Project | Password Reset</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.10.1/dist/sweetalert2.min.css">
</head>
<body>
    <div class="col-12 d-flex flex-wrap gap-3 justify-content-center  p-1">
        <div id="codeInput" class=" col-6 border-1 rounded-2 pt-5 pb-2 shadow ">
            <form class="w-75 mx-auto" id="changePasswordForm">

                <h4 class="text-center">Şifre Güncelleme Formu</h4>
                <div class="input-group mt-3 mb-3">
                    <span for="exampleInputEmail1" class="input-group-text">E-posta Adresiniz</span>
                    <input type="email" class="form-control" name="Email" value="@ViewData["Email"]"  aria-describedby="E-posta Adresiniz">
                </div>

                <div class="input-group mt-3 mb-3">
                    <span for="NewPassword" class="input-group-text">Yeni Şifre</span>
                    <input type="password" class="form-control" name="NewPassword" id="NewPassword" aria-describedby="Yeni Şifre">
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Şifremi Güncelle</button>
                </div>
            </form>

        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.10.1/dist/sweetalert2.all.min.js"></script>
    <script>
        $(document).ready(function () {

            $("#changePasswordForm").on("submit", function (e) {
                e.preventDefault();

                var Email = $("input[name=Email]").val();
                var NewPassword = $("input[name=NewPassword]").val();


                $.ajax({
                    type: "PUT",
                    url: "/Auth/ResetPassword",
                    data: {
                        Email: Email,
                        NewPassword: NewPassword
                    },
                    success: function (response) {
                        if (response.success == true) {
                            Swal.fire({
                                position: 'center',
                                icon: 'success',
                                text: response.message,
                                showConfirmButton: false,
                                timer: 4000
                            }).then(() => {
                                window.location.href = response.url
                            });
                        } else {
                            Swal.fire({
                                position: 'center',
                                icon: 'error',
                                text: response.message,
                                showConfirmButton: false,
                                timer: 4000
                            });
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error("Ajax Error:", error);
                    },
                });
            })

        });
    </script>

</body>
</html>
